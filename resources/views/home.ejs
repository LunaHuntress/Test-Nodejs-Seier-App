<section class="hero py-16">
    <div class=" p-6 container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>The only shipment loading assistant for you !</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Seier de Freight</h1>

            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Ship Now</button>
        </div>
        <div class="w-1/2">
            <img src="../../public/img/Delivery@2x-1.png" alt="furniture">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8 p-6">All Furnitures</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% trackings.forEach(function(tracking) { %>
            <div class="w-64 mt-4">
            <img class="h-40 mb-4 mx-auto" src="/public/img/<%= tracking.image %>" al="Accent Piece 1">
            <div class="text-center">
                <h2 class="mb-4 text-lg p-4"><%= tracking.name %></h2>


                <div>
                    <button data-tracking="<%= JSON.stringify(tracking) %>" 
                        class="add-to-order py-1 px-6 rounded-full font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>
       <% }) %>
        

        
    </div>
</section>