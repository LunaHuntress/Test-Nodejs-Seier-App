<section class="status">
    <div class="container mx-auto">
        <div class="status-box w-full lg:w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12">
                <h1 class="text-xl font-bold">Track delivery status</h1>
                <h6 class="bg-white py-1 rounded-full px-4 text-green-600 text-xs">
                    <%= purchase._id %>
                </h6>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(purchase) %>">
            </div>
            <ul>
                 
                <li class="status_line text-sm md:text-xl pb-16" data-status="Prepared"><span>Preparation for Loading</span></li>
                <li class="status_line text-sm md:text-xl pb-16" data-status="Out for Delivery"><span>Out for delivery </span>
                </li>
                <li class="status_line text-sm md:text-xl" data-status="Delivered"><span>Delivered</span></li>
            </ul>
        </div>
    </div>
</section>