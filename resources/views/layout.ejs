<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seier de Freight</title>
    <link rel="shortcut icon" href="/public/favicon.ico" type="image/x-icon" />
    
    

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet"
        href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="../../public/css/app.css">
</head>

<body>
    <nav class="container mx-auto flex items-center justify-between py-4">
        <div>
            <a href="/"><img src="/public/img/Seier de Freight Logo.png" alt="logo" 
                class="object-left-top w-20 h-20 m-2 inline rounded-2xl"></a>
        </div>

        <div>
            <ul class="flex items-center">
                <li class="ml-6"><a href="/">Products</a></li>
                <% if(user) { %>
                <li class="ml-6">
                    <form id="logout" action="/logout" method="POST">
                        <a onclick="document.getElementById('logout').submit()" href="#">Logout</a>
                    </form>
                    
                </li>
                <% } else { %>
                <li class="ml-6"><a href="/register">Register</a></li>
                <li class="ml-6"><a href="/login">Login</a></li>
                <% } %>
                <li class="ml-6"><a href="/order" class="inline-block px-2 py-0 rounded-full flex items-center">
                    
                    <span id="orderCounter" 
                    class="text-white font-bold pr-2"><%= session.order ? session.order.totalQty : '' %></span>

                    <img src="/public/img/img_355401.png" alt="order"
                            class="object-right-top w-9 h-10 m-2 inline">

                        </a></li>
            </ul>
        </div>
    </nav>
 <%- body %>
<script src="/socket.io/socket.io.js"></script>
    <script src="../../public/js/app.js"></script>

</body>

</html>